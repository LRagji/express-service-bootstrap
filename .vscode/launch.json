    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Example",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/examples/health-checks-express/index.mjs",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/dist/src/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "args": [
                "--test"
            ],
            "name": "Debug Test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/disposable-singleton-container.tests.ts",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/dist/test/**/*.js"
            ]
        }
    ]
}